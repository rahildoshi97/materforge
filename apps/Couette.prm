DomainSetup {
    blocks < 1, 1, 1 >;
    cellsPerBlock < 64, 32, 32 >;
    periodic < 1, 1, 0 >;
}

Parameters {
    nu              1.0 / 6.0;
    u_max           0.025;
    timesteps       1000;
    errorThreshold  1e-15;

    // Temperature gradient parameters
    T_bottom        300.0;        // Temperature at lower wall (K)
    T_top           600.0;        // Temperature at upper wall (K)
}

Output {
    vtkWriteFrequency   100;
}
