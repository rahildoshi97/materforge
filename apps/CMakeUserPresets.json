{
    "version": 6,
    "configurePresets": [
        {
            "name": "lumi-debug-cpu",
            "inherits": "debug-cpu",
            "displayName": "LUMI Debug CPU Build",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "cc",
                "CMAKE_CXX_COMPILER": "CC",
                "BUILD_CPU_ONLY": "ON",
                "Python_ROOT_DIR": "/pfs/lustrep1/projappl/project_465001284/venvs/materforge",
                "Python_EXECUTABLE": "/pfs/lustrep1/projappl/project_465001284/venvs/materforge/bin/python",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/cmake-build-lumi-debug-cpu"
            },
            "binaryDir": "${sourceDir}/cmake-build-lumi-debug-cpu"
        },
        {
            "name": "lumi-release-cpu",
            "inherits": "release-cpu", 
            "displayName": "LUMI Release CPU Build",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "cc",
                "CMAKE_CXX_COMPILER": "CC",
                "BUILD_CPU_ONLY": "ON",
                "Python_ROOT_DIR": "/pfs/lustrep1/projappl/project_465001284/venvs/materforge",
