{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 25,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "debug-cpu",
            "displayName": "Debug CPU Build",
            "description": "Debug build with CPU-only support",
            "generator": "Unix Makefiles",
            "binaryDir": "${sourceDir}/cmake-build-debug",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "/usr/bin/gcc",
                "CMAKE_CXX_COMPILER": "/usr/bin/g++",
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/cmake-build-debug",
                "Python_ROOT_DIR": "/local/ca00xebo/venvs/materforge",
                "Python_EXECUTABLE": "/local/ca00xebo/venvs/materforge/bin/python",
                "ENABLE_GPU_SUPPORT": "OFF",
                "WALBERLA_BUILD_WITH_CODEGEN": "ON",
                "WALBERLA_BUILD_WITH_PYTHON": "ON",
                "WALBERLA_BUILD_WITH_OPENMP": "ON",
                "WALBERLA_BUILD_WITH_MPI": "ON",
                "WALBERLA_BUILD_TUTORIALS": "OFF",
                "WALBERLA_BUILD_TOOLS": "OFF",
                "WALBERLA_BUILD_TESTS": "OFF",
                "WALBERLA_BUILD_SHOWCASES": "OFF",
                "WALBERLA_BUILD_WITH_PARMETIS": "OFF",
                "WALBERLA_BUILD_WITH_OPENMESH": "OFF",
                "WALBERLA_BUILD_WITH_METIS": "OFF",
                "WALBERLA_BUILD_WITH_LTO": "OFF",
                "WALBERLA_BUILD_WITH_LIKWID_MARKERS": "OFF",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "CMAKE_SKIP_BUILD_RPATH": "OFF",
                "CMAKE_SKIP_INSTALL_RPATH": "ON",
                "CMAKE_INSTALL_RPATH_USE_LINK_PATH": "OFF"
            }
        },
        {
            "name": "release-cpu",
            "displayName": "Release CPU Build", 
            "description": "Release build with CPU-only support",
            "generator": "Unix Makefiles",
            "binaryDir": "${sourceDir}/cmake-build-release",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "/usr/bin/gcc",
                "CMAKE_CXX_COMPILER": "/usr/bin/g++",
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/cmake-build-release",
                "Python_ROOT_DIR": "/local/ca00xebo/venvs/materforge",
                "Python_EXECUTABLE": "/local/ca00xebo/venvs/materforge/bin/python",
                "ENABLE_GPU_SUPPORT": "OFF",
                "WALBERLA_BUILD_WITH_CODEGEN": "ON",
                "WALBERLA_BUILD_WITH_PYTHON": "ON",
                "WALBERLA_BUILD_WITH_OPENMP": "ON",
                "WALBERLA_BUILD_WITH_MPI": "ON",
                "WALBERLA_BUILD_TUTORIALS": "OFF",
                "WALBERLA_BUILD_TOOLS": "OFF",
                "WALBERLA_BUILD_TESTS": "OFF",
                "WALBERLA_BUILD_SHOWCASES": "OFF",
                "WALBERLA_BUILD_WITH_PARMETIS": "OFF",
                "WALBERLA_BUILD_WITH_OPENMESH": "OFF",
                "WALBERLA_BUILD_WITH_METIS": "OFF",
                "WALBERLA_BUILD_WITH_LTO": "OFF",
                "WALBERLA_BUILD_WITH_LIKWID_MARKERS": "OFF",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
                "CMAKE_SKIP_BUILD_RPATH": "OFF",
                "CMAKE_SKIP_INSTALL_RPATH": "ON",
                "CMAKE_INSTALL_RPATH_USE_LINK_PATH": "OFF"
            }
        },
        {
            "name": "debug-gpu",
            "displayName": "Debug GPU Build",
            "description": "Debug build with CUDA GPU support",
            "generator": "Unix Makefiles",
            "binaryDir": "${sourceDir}/cmake-build-debug-gpu",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "/usr/bin/gcc",
                "CMAKE_CXX_COMPILER": "/usr/bin/g++",
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/cmake-build-debug-gpu",
                "Python_ROOT_DIR": "/local/ca00xebo/venvs/materforge",
                "Python_EXECUTABLE": "/local/ca00xebo/venvs/materforge/bin/python",
                "ENABLE_GPU_SUPPORT": "ON",
                "WALBERLA_BUILD_WITH_CUDA": "ON",
                "WALBERLA_BUILD_WITH_CODEGEN": "ON",
                "WALBERLA_BUILD_WITH_PYTHON": "ON",
                "WALBERLA_BUILD_WITH_OPENMP": "ON",
                "WALBERLA_BUILD_WITH_MPI": "ON",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            }
        },
        {
            "name": "release-gpu",
            "displayName": "Release GPU Build",
            "description": "Release build with CUDA GPU support",
            "generator": "Unix Makefiles",
            "binaryDir": "${sourceDir}/cmake-build-release-gpu",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "/usr/bin/gcc",
                "CMAKE_CXX_COMPILER": "/usr/bin/g++",
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/cmake-build-release-gpu",
                "Python_ROOT_DIR": "/local/ca00xebo/venvs/materforge",
                "Python_EXECUTABLE": "/local/ca00xebo/venvs/materforge/bin/python",
                "ENABLE_GPU_SUPPORT": "ON",
                "WALBERLA_BUILD_WITH_CUDA": "ON",
                "WALBERLA_BUILD_WITH_CODEGEN": "ON",
                "WALBERLA_BUILD_WITH_PYTHON": "ON",
                "WALBERLA_BUILD_WITH_OPENMP": "ON",
                "WALBERLA_BUILD_WITH_MPI": "ON",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "debug-cpu-build",
            "displayName": "Debug CPU Build",
            "configurePreset": "debug-cpu",
            "description": "Build using debug CPU preset",
            "jobs": 8
        },
        {
            "name": "release-cpu-build",
            "displayName": "Release CPU Build",
            "configurePreset": "release-cpu",
            "description": "Build using release CPU preset",
            "jobs": 8
        },
        {
            "name": "debug-gpu-build",
            "displayName": "Debug GPU Build", 
            "configurePreset": "debug-gpu",
            "description": "Build using debug GPU preset",
            "jobs": 8
        },
        {
            "name": "release-gpu-build",
            "displayName": "Release GPU Build",
            "configurePreset": "release-gpu",
            "description": "Build using release GPU preset",
            "jobs": 8
        }
    ]
}
