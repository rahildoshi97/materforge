include LICENSE
include README.md
include AUTHORS.txt
include CHANGELOG.md
include CITATION.cff
include pyproject.toml

# Include all source code and data files
graft src

# Include documentation
graft docs

# Exclude applications directory - not part of the library
prune apps

# Exclude examples directory - not part of the library  
prune examples

# Exclude tests directory - not needed in distribution
prune tests

# Exclude materforge_plots directory - not part of the library
global-exclude */materforge_plots/*
global-exclude materforge_plots/*
prune */materforge_plots
recursive-exclude * materforge_plots

# Exclude specific files
exclude sync-repos.sh
exclude update-docs.sh

# Global exclusions - bytecode and cache files
global-exclude *.py[co]
global-exclude __pycache__
global-exclude .DS_Store
global-exclude *.so
global-exclude .git*
global-exclude .pytest_cache

# Exclude build artifacts
prune build
prune dist
prune *.egg-info
prune src/*.egg-info

# Exclude IDE and editor files
global-exclude .vscode
global-exclude .idea
global-exclude *.swp
global-exclude *.swo
global-exclude *~

# Exclude virtual environment directory
prune venv
prune env
prune .venv

# Exclude output directories
prune vtk*
